<?xml version="1.0"?>
<ruleset name="Laravel5-Afterpay">
    <description>PHP Code Sniffer standard.</description>

    <file>src</file>

    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <arg name="report" value="full"/>
    <arg name="colors"/>
    <arg value="np"/>

    <rule ref="PSR2"/>
    <rule ref="Symfony2"/>
</ruleset>
